        // Subscription function
        function subscribe(service, price) {
            const services = {
                books: 'الكتب الإلكترونية',
                tips: 'النصائح اليومية',
                movies: 'الأفلام والمسلسلات',
                software: 'برامج الحاسوب',
                marriage: 'النصائح الزوجية',
                problems: 'حل المشاكل الشخصية',
                horoscope: 'توقعات الأبراج',
                consultation: 'الاستشارات',
                astrology: 'قراءة الطالع الفلكي'
            };
            
            console.log('Subscribe function called:', service, price);
            
            // فتح نافذة طلب التفعيل
            openActivationModal(service, services[service], price);
        }

        // Activation Request Modal
        function openActivationModal(serviceId, serviceName, price) {
            console.log('Opening activation modal:', serviceId, serviceName, price);
            
            // إزالة أي نافذة موجودة مسبقاً
            const existingModal = document.querySelector('.activation-modal');
            if (existingModal) {
                existingModal.remove();
            }
            
            const modal = document.createElement('div');
            modal.className = 'fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 activation-modal';
            modal.innerHTML = `
                <div class="bg-white rounded-xl p-8 max-w-md w-full mx-4">
                    <div class="text-center mb-6">
                        <h2 class="text-2xl font-bold text-gray-800 mb-2">🔐 طلب تفعيل الاشتراك</h2>
                        <div class="bg-blue-50 p-4 rounded-lg">
                            <h3 class="font-bold text-blue-800">${serviceName}</h3>
                            <p class="text-blue-600 text-lg font-bold">${price} دينار عراقي/شهر</p>
                        </div>
                    </div>
                    
                    <form id="activationForm" class="space-y-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">الاسم الكامل: <span class="text-red-500">*</span></label>
                            <input type="text" name="fullName" class="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">رقم الهاتف: <span class="text-red-500">*</span></label>
                            <input type="tel" name="phone" class="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">البريد الإلكتروني: <span class="text-red-500">*</span></label>
                            <input type="email" name="email" class="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required>
                        </div>
                        
                        <div class="bg-gray-50 p-4 rounded-lg border">
                            <p class="text-sm text-gray-600 mb-2">📧 سيتم إرسال طلب التفعيل إلى:</p>
                            <p class="font-mono text-sm bg-white p-2 rounded border text-center">awarenessmaker310@gmail.com</p>
                        </div>
                        
                        <div class="bg-yellow-50 p-4 rounded-lg border-l-4 border-yellow-400">
                            <h4 class="font-bold text-yellow-800 mb-2">⚠️ مهم:</h4>
                            <p class="text-sm text-yellow-700">بعد إرسال الطلب، ستحتاج إلى موافقة الإدارة لتفعيل اشتراكك. سيتم التواصل معك عبر البريد الإلكتروني.</p>
                        </div>
                        
                        <div class="flex space-x-3 space-x-reverse">
                            <button type="submit" class="flex-1 bg-blue-600 text-white py-3 rounded-lg hover:bg-blue-700 transition-colors">
                                📤 إرسال طلب التفعيل
                            </button>
                            <button type="button" onclick="closeActivationModal()" class="flex-1 bg-gray-500 text-white py-3 rounded-lg hover:bg-gray-600 transition-colors">
                                إلغاء
                            </button>
                        </div>
                    </form>
                </div>
            `;
            
            document.body.appendChild(modal);
            
            // إضافة مستمع الأحداث للنموذج
            const form = document.getElementById('activationForm');
            form.addEventListener('submit', function(event) {
                event.preventDefault();
                submitActivationRequest(event, serviceId, serviceName, price);
            });
        }

        function closeActivationModal() {
            const modal = document.querySelector('.activation-modal');
            if (modal) {
                modal.remove();
            }
        }

        function submitActivationRequest(event, serviceId, serviceName, price) {
            event.preventDefault();
            const formData = new FormData(event.target);
            const fullName = formData.get('fullName');
            const phone = formData.get('phone');
            const email = formData.get('email');
            
            // إنشاء طلب التفعيل
            const activationRequest = {
                id: Date.now().toString(),
                service: serviceId,
                serviceName: serviceName,
                price: price,
                customerName: fullName,
                phone: phone,
                email: email,
                requestDate: new Date().toISOString(),
                status: 'pending'
            };
            
            // حفظ طلب التفعيل محلياً
            let requests = JSON.parse(localStorage.getItem('activationRequests') || '[]');
            requests.push(activationRequest);
            localStorage.setItem('activationRequests', JSON.stringify(requests));
            
            // إغلاق النافذة
            closeActivationModal();
            
            // إظهار رسالة تأكيد
            alert(`📤 تم إرسال طلب التفعيل بنجاح!\n\n📋 تفاصيل الطلب:\n• الخدمة: ${serviceName}\n• الاسم: ${fullName}\n• الهاتف: ${phone}\n• البريد الإلكتروني: ${email}\n\n📧 تم إرسال الطلب إلى: awarenessmaker310@gmail.com\n\n⏳ في انتظار موافقة الإدارة...\n\nسيتم التواصل معك عبر البريد الإلكتروني بمجرد الموافقة على طلبك.`);
            
            // محاكاة استلام طلب التفعيل من قبل الإدارة
            setTimeout(() => {
                showAdminApprovalDialog(activationRequest);
            }, 2000);
        }

        // Admin Approval Dialog (محاكاة نافذة الموافقة للإدارة)
        function showAdminApprovalDialog(request) {
            const adminModal = document.createElement('div');
            adminModal.className = 'fixed inset-0 bg-black bg-opacity-70 flex items-center justify-center z-50';
            adminModal.innerHTML = `
                <div class="bg-white rounded-xl p-8 max-w-lg w-full mx-4 border-4 border-orange-400">
                    <div class="text-center mb-6">
                        <h2 class="text-2xl font-bold text-orange-600 mb-2">🔔 طلب تفعيل جديد - نافذة الإدارة</h2>
                        <div class="bg-orange-50 p-4 rounded-lg">
                            <p class="text-orange-800 font-semibold">تم استلام طلب تفعيل اشتراك جديد</p>
                        </div>
                    </div>
                    
                    <div class="space-y-3 mb-6">
                        <div class="bg-gray-50 p-3 rounded">
                            <strong>الخدمة:</strong> ${request.serviceName}
                        </div>
                        <div class="bg-gray-50 p-3 rounded">
                            <strong>الاسم:</strong> ${request.customerName}
                        </div>
                        <div class="bg-gray-50 p-3 rounded">
                            <strong>الهاتف:</strong> ${request.phone}
                        </div>
                        <div class="bg-gray-50 p-3 rounded">
                            <strong>البريد الإلكتروني:</strong> ${request.email}
                        </div>
                        <div class="bg-gray-50 p-3 rounded">
                            <strong>السعر:</strong> ${request.price} دينار/شهر
                        </div>
                    </div>
                    
                    <div class="bg-blue-50 p-4 rounded-lg mb-6">
                        <p class="text-blue-800 text-sm">
                            <strong>سؤال للإدارة:</strong><br>
                            هل تريد فتح قسم "${request.serviceName}" للمستخدم "${request.customerName}" (${request.email})؟
                        </p>
                    </div>
                    
                    <div class="flex space-x-3 space-x-reverse">
                        <button onclick="approveActivation('${request.id}')" class="flex-1 bg-green-600 text-white py-3 rounded-lg hover:bg-green-700 transition-colors">
                            ✅ موافقة وتفعيل
                        </button>
                        <button onclick="rejectActivation('${request.id}')" class="flex-1 bg-red-600 text-white py-3 rounded-lg hover:bg-red-700 transition-colors">
                            ❌ رفض الطلب
                        </button>
                    </div>
                </div>
            `;
            
            document.body.appendChild(adminModal);
        }

        // Approve activation
        function approveActivation(requestId) {
            let requests = JSON.parse(localStorage.getItem('activationRequests') || '[]');
            const request = requests.find(r => r.id === requestId);
            
            if (request) {
                // تحديث حالة الطلب
                request.status = 'approved';
                request.approvalDate = new Date().toISOString();
                localStorage.setItem('activationRequests', JSON.stringify(requests));
                
                // تفعيل الاشتراك
                activateSubscription(request.service);
                
                // إغلاق نافذة الإدارة
                document.querySelector('.fixed.inset-0.bg-black.bg-opacity-70').remove();
                
                // إظهار رسالة تأكيد للإدارة
                alert(`✅ تم تفعيل الاشتراك بنجاح!\n\n👤 المستخدم: ${request.customerName}\n📧 البريد: ${request.email}\n🎯 الخدمة: ${request.serviceName}\n\n📧 سيتم إرسال إشعار تفعيل إلى المستخدم.`);
                
                // محاكاة إرسال إيميل تفعيل للمستخدم
                setTimeout(() => {
                    alert(`📧 تم إرسال إيميل التفعيل!\n\nإلى: ${request.email}\n\nالرسالة:\n"مرحباً ${request.customerName},\n\nتم تفعيل اشتراكك في ${request.serviceName} بنجاح!\nيمكنك الآن الوصول إلى جميع محتويات الخدمة.\n\nشكراً لك،\nفريق صانع وعي"`);
                }, 1000);
            }
        }

        // Reject activation
        function rejectActivation(requestId) {
            let requests = JSON.parse(localStorage.getItem('activationRequests') || '[]');
            const request = requests.find(r => r.id === requestId);
            
            if (request) {
                // تحديث حالة الطلب
                request.status = 'rejected';
                request.rejectionDate = new Date().toISOString();
                localStorage.setItem('activationRequests', JSON.stringify(requests));
                
                // إغلاق نافذة الإدارة
                document.querySelector('.fixed.inset-0.bg-black.bg-opacity-70').remove();
                
                // إظهار رسالة رفض
                alert(`❌ تم رفض طلب التفعيل\n\n👤 المستخدم: ${request.customerName}\n📧 البريد: ${request.email}\n🎯 الخدمة: ${request.serviceName}\n\n📧 سيتم إرسال إشعار الرفض إلى المستخدم.`);
                
                // محاكاة إرسال إيميل رفض للمستخدم
                setTimeout(() => {
                    alert(`📧 تم إرسال إيميل الرفض!\n\nإلى: ${request.email}\n\nالرسالة:\n"مرحباً ${request.customerName},\n\nنأسف لإبلاغك أنه تم رفض طلب تفعيل اشتراكك في ${request.serviceName}.\nيرجى التواصل معنا للمزيد من التفاصيل.\n\nشكراً لك،\nفريق صانع وعي"`);
                }, 1000);
            }
        }

        // Contact form
        function sendMessage(event) {
            event.preventDefault();
            alert('📧 تم إرسال رسالتك بنجاح! سنتواصل معك قريباً على الرقم المذكور.');
            event.target.reset();
        }

        // Donation function
        function submitDonation(event) {
            event.preventDefault();
            const formData = new FormData(event.target);
            const donorName = formData.get('donorName') || event.target[0].value;
            const amount = formData.get('amount') || event.target[1].value;
            const country = formData.get('country') || event.target[2].value;
            const phone = formData.get('phone') || event.target[3].value;
            
            // هنا يمكن إضافة الكود لحفظ البيانات في قاعدة بيانات Excel
            alert(`❤️ شكراً لك على التبرع!\n\nالمتبرع: ${donorName}\nالمبلغ: ${amount} دينار\nالدولة: ${country}\nالهاتف: ${phone}\n\nسيتم التواصل معك لتأكيد التبرع.`);
            event.target.reset();
            closeModal('donation');
        }

        // Consultation booking
        function bookConsultation(event) {
            event.preventDefault();
            alert('🤝 تم حجز الاستشارة بنجاح!\n\nسيتم التواصل معك خلال 24 ساعة لتحديد موعد الاستشارة.\n\nللدفع: زين كاش 07814164745');
            event.target.reset();
            closeServiceModal();
        }

        // Problem submission
        function submitProblem(event) {
            event.preventDefault();
            alert('🤐 تم استلام مشكلتك بسرية تامة!\n\nسيتم دراسة المشكلة وتقديم الحلول المناسبة.\n\nللدفع: زين كاش 07814164745');
            event.target.reset();
            closeServiceModal();
        }

        // Zodiac calculator using Arabic Gematria
        function calculateZodiac() {
            const fullName = document.getElementById('fullName').value.trim();
            const motherName = document.getElementById('motherName').value.trim();
            
            if (!fullName || !motherName) {
                alert('⚠️ يرجى إدخال اسمك الكامل واسم الأم');
                return;
            }

            // Arabic Gematria values (حساب الجمل الكبير) - الجدول الصحيح
            const arabicValues = {
                'ا': 1, 'أ': 1, 'إ': 1, 'آ': 1, 'ء': 1,
                'ب': 2, 'ج': 3, 'د': 4, 'ه': 5, 'و': 6,
                'ز': 7, 'ح': 8, 'ط': 9, 'ي': 10, 'ك': 20, 'ل': 30,
                'م': 40, 'ن': 50, 'س': 60, 'ع': 70, 'ف': 80, 'ص': 90,
                'ق': 100, 'ر': 200, 'ش': 300, 'ت': 400, 'ث': 500, 'خ': 600,
                'ذ': 700, 'ض': 800, 'ظ': 900, 'غ': 1000
            };

            // Calculate total value for full name
            let nameValue = 0;
            for (let char of fullName.replace(/\s/g, '')) {
                if (arabicValues[char]) {
                    nameValue += arabicValues[char];
                }
            }

            // Calculate total value for mother's name
            let motherValue = 0;
            for (let char of motherName.replace(/\s/g, '')) {
                if (arabicValues[char]) {
                    motherValue += arabicValues[char];
                }
            }

            // Total value of both names
            const totalValue = nameValue + motherValue;

            // Calculate zodiac index (remainder when divided by 12)
            // إذا كان الباقي 0، يصبح البرج رقم 12 (الحوت)
            let zodiacIndex = totalValue % 12;
            if (zodiacIndex === 0) zodiacIndex = 12;

            // Zodiac signs array (1-12) - التسلسل الصحيح للأبراج
            const zodiacSigns = {
                1: { name: 'الحمل', symbol: '♈', dates: 'مارس 21 - أبريل 19', traits: 'شجاع، قيادي، متحمس، مبادر' },
                2: { name: 'الثور', symbol: '♉', dates: 'أبريل 20 - مايو 20', traits: 'صبور، عملي، موثوق، مثابر' },
                3: { name: 'الجوزاء', symbol: '♊', dates: 'مايو 21 - يونيو 20', traits: 'ذكي، متكيف، اجتماعي، فضولي' },
                4: { name: 'السرطان', symbol: '♋', dates: 'يونيو 21 - يوليو 22', traits: 'حساس، حنون، حدسي، عائلي' },
                5: { name: 'الأسد', symbol: '♌', dates: 'يوليو 23 - أغسطس 22', traits: 'واثق، كريم، مبدع، قيادي' },
                6: { name: 'العذراء', symbol: '♍', dates: 'أغسطس 23 - سبتمبر 22', traits: 'منظم، تحليلي، مفيد، دقيق' },
                7: { name: 'الميزان', symbol: '♎', dates: 'سبتمبر 23 - أكتوبر 22', traits: 'متوازن، دبلوماسي، عادل، اجتماعي' },
                8: { name: 'العقرب', symbol: '♏', dates: 'أكتوبر 23 - نوفمبر 21', traits: 'قوي، غامض، شغوف، عميق' },
                9: { name: 'القوس', symbol: '♐', dates: 'نوفمبر 22 - ديسمبر 21', traits: 'مغامر، متفائل، حر، فلسفي' },
                10: { name: 'الجدي', symbol: '♑', dates: 'ديسمبر 22 - يناير 19', traits: 'طموح، منضبط، مسؤول، عملي' },
                11: { name: 'الدلو', symbol: '♒', dates: 'يناير 20 - فبراير 18', traits: 'مبتكر، مستقل، إنساني، مفكر' },
                12: { name: 'الحوت', symbol: '♓', dates: 'فبراير 19 - مارس 20', traits: 'حالم، رحيم، فني، روحاني' }
            };

            const zodiac = zodiacSigns[zodiacIndex];

            document.getElementById('zodiacResult').innerHTML = `
                <div class="zodiac-result">
                    <div class="text-4xl mb-3">${zodiac.symbol}</div>
                    <h3 class="text-2xl font-bold mb-2">برجك: ${zodiac.name}</h3>
                    <p class="mb-2"><strong>التواريخ:</strong> ${zodiac.dates}</p>
                    <p class="mb-3"><strong>الصفات:</strong> ${zodiac.traits}</p>
                    <div class="text-sm opacity-90 space-y-1">
                        <p>قيمة الاسم: ${nameValue}</p>
                        <p>قيمة اسم الأم: ${motherValue}</p>
                        <p>المجموع الكلي: ${totalValue}</p>
                        <p class="text-xs opacity-75">الحساب: ${totalValue} ÷ 12 = ${Math.floor(totalValue/12)} والباقي ${totalValue % 12 === 0 ? 12 : totalValue % 12} → البرج رقم ${zodiacIndex}</p>
                    </div>
                    <div class="mt-4 pt-4 border-t border-white border-opacity-30">
                        <button onclick="openModal('horoscope')" class="bg-yellow-400 text-purple-800 px-4 py-2 rounded-lg font-bold hover:bg-yellow-300 transition-colors">
                            🔮 اشترك في توقعات ${zodiac.name}
                        </button>
                    </div>
                </div>
            `;
        }

        // Astrology reading access for subscribers
        function accessAstrologyReading() {
            if (!checkSubscription('astrology')) {
                alert('⚠️ يتطلب اشتراك نشط في خدمة قراءة الطالع الفلكي');
                return;
            }
            
            const name = document.getElementById('astrologyName').value.trim();
            const birthDate = document.getElementById('birthDate').value;
            const birthHour = document.getElementById('birthHour').value;
            const birthMinute = document.getElementById('birthMinute').value;
            const birthPlace = document.getElementById('birthPlace').value.trim();
            const phone = document.getElementById('astrologyPhone').value.trim();
            
            if (!name || !birthDate || !birthPlace) {
                alert('⚠️ يرجى ملء الحقول المطلوبة (الاسم، تاريخ الميلاد، مكان الولادة)');
                return;
            }
            
            // تنسيق وقت الولادة
            let birthTime = '';
            if (birthHour && birthMinute) {
                birthTime = `${birthHour}:${birthMinute}`;
            } else if (birthHour) {
                birthTime = `${birthHour}:00 (تقريبي)`;
            } else {
                birthTime = 'غير محدد';
            }
            
            // إغلاق النافذة الحالية
            closeModal('astrology');
            
            // عرض نافذة قراءة الطالع بالذكاء الاصطناعي
            generateAstrologyReading(name, birthDate, birthTime, birthPlace, phone);
        }
        
        // Generate AI-powered astrology reading
        function generateAstrologyReading(name, birthDate, birthTime, birthPlace, phone) {
            // محاكاة الذكاء الاصطناعي لقراءة الطالع
            const birthDateObj = new Date(birthDate);
            const month = birthDateObj.getMonth() + 1;
            const day = birthDateObj.getDate();
            
            // تحديد البرج الشمسي
            let sunSign = '';
            let sunSignSymbol = '';
            let sunSignTraits = '';
            
            if ((month == 3 && day >= 21) || (month == 4 && day <= 19)) {
                sunSign = 'الحمل'; sunSignSymbol = '♈'; sunSignTraits = 'شجاع، قيادي، متحمس، مبادر';
            } else if ((month == 4 && day >= 20) || (month == 5 && day <= 20)) {
                sunSign = 'الثور'; sunSignSymbol = '♉'; sunSignTraits = 'صبور، عملي، موثوق، مثابر';
            } else if ((month == 5 && day >= 21) || (month == 6 && day <= 20)) {
                sunSign = 'الجوزاء'; sunSignSymbol = '♊'; sunSignTraits = 'ذكي، متكيف، اجتماعي، فضولي';
            } else if ((month == 6 && day >= 21) || (month == 7 && day <= 22)) {
                sunSign = 'السرطان'; sunSignSymbol = '♋'; sunSignTraits = 'حساس، حنون، حدسي، عائلي';
            } else if ((month == 7 && day >= 23) || (month == 8 && day <= 22)) {
                sunSign = 'الأسد'; sunSignSymbol = '♌'; sunSignTraits = 'واثق، كريم، مبدع، قيادي';
            } else if ((month == 8 && day >= 23) || (month == 9 && day <= 22)) {
                sunSign = 'العذراء'; sunSignSymbol = '♍'; sunSignTraits = 'منظم، تحليلي، مفيد، دقيق';
            } else if ((month == 9 && day >= 23) || (month == 10 && day <= 22)) {
                sunSign = 'الميزان'; sunSignSymbol = '♎'; sunSignTraits = 'متوازن، دبلوماسي، عادل، اجتماعي';
            } else if ((month == 10 && day >= 23) || (month == 11 && day <= 21)) {
                sunSign = 'العقرب'; sunSignSymbol = '♏'; sunSignTraits = 'قوي، غامض، شغوف، عميق';
            } else if ((month == 11 && day >= 22) || (month == 12 && day <= 21)) {
                sunSign = 'القوس'; sunSignSymbol = '♐'; sunSignTraits = 'مغامر، متفائل، حر، فلسفي';
            } else if ((month == 12 && day >= 22) || (month == 1 && day <= 19)) {
                sunSign = 'الجدي'; sunSignSymbol = '♑'; sunSignTraits = 'طموح، منضبط، مسؤول، عملي';
            } else if ((month == 1 && day >= 20) || (month == 2 && day <= 18)) {
                sunSign = 'الدلو'; sunSignSymbol = '♒'; sunSignTraits = 'مبتكر، مستقل، إنساني، مفكر';
            } else {
                sunSign = 'الحوت'; sunSignSymbol = '♓'; sunSignTraits = 'حالم، رحيم، فني، روحاني';
            }
            
            // محاكاة البرج الطالع (عشوائي بناءً على الوقت والمكان)
            const ascendantSigns = ['الحمل', 'الثور', 'الجوزاء', 'السرطان', 'الأسد', 'العذراء', 'الميزان', 'العقرب', 'القوس', 'الجدي', 'الدلو', 'الحوت'];
            const ascendantSymbols = ['♈', '♉', '♊', '♋', '♌', '♍', '♎', '♏', '♐', '♑', '♒', '♓'];
            const ascendantIndex = (birthDateObj.getTime() + (birthTime ? parseInt(birthTime.split(':')[0]) * 60 + parseInt(birthTime.split(':')[1] || 0) : 0)) % 12;
            const ascendant = ascendantSigns[ascendantIndex];
            const ascendantSymbol = ascendantSymbols[ascendantIndex];
            
            // محاكاة مواقع الكواكب
            const planets = {
                moon: ascendantSigns[(ascendantIndex + 2) % 12],
                mercury: ascendantSigns[(ascendantIndex + 3) % 12],
                venus: ascendantSigns[(ascendantIndex + 4) % 12],
                mars: ascendantSigns[(ascendantIndex + 5) % 12],
                jupiter: ascendantSigns[(ascendantIndex + 6) % 12],
                saturn: ascendantSigns[(ascendantIndex + 7) % 12]
            };
            
            // إنشاء نافذة النتائج
            const resultModal = document.createElement('div');
            resultModal.className = 'fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50';
            resultModal.innerHTML = `
                <div class="bg-white rounded-xl p-8 max-w-4xl w-full mx-4 max-h-96 overflow-y-auto">
                    <div class="flex justify-between items-center mb-6">
                        <h2 class="text-2xl font-bold text-gray-800">🤖 قراءة الطالع الفلكي بالذكاء الاصطناعي</h2>
                        <button onclick="closeAstrologyResult()" class="text-gray-500 hover:text-gray-700 text-2xl">&times;</button>
                    </div>
                    
                    <div class="mb-6 p-4 bg-gradient-to-r from-indigo-50 to-purple-50 rounded-lg border">
                        <h3 class="font-bold text-lg text-indigo-800 mb-2">📋 بيانات الشخص:</h3>
                        <div class="grid md:grid-cols-2 gap-4 text-sm">
                            <p><strong>الاسم:</strong> ${name}</p>
                            <p><strong>تاريخ الميلاد:</strong> ${birthDate}</p>
                            <p><strong>وقت الولادة:</strong> ${birthTime}</p>
                            <p><strong>مكان الولادة:</strong> ${birthPlace}</p>
                        </div>
                    </div>
                    
                    <div class="grid md:grid-cols-2 gap-6">
                        <div class="space-y-4">
                            <div class="bg-gradient-to-r from-yellow-50 to-orange-50 p-4 rounded-lg border-l-4 border-yellow-400">
                                <h4 class="font-bold text-yellow-800 mb-2">☀️ البرج الشمسي</h4>
                                <div class="flex items-center space-x-3 space-x-reverse mb-2">
                                    <span class="text-3xl">${sunSignSymbol}</span>
                                    <span class="text-xl font-bold">${sunSign}</span>
                                </div>
                                <p class="text-sm text-yellow-700"><strong>الصفات:</strong> ${sunSignTraits}</p>
                            </div>
                            
                            <div class="bg-gradient-to-r from-indigo-50 to-purple-50 p-4 rounded-lg border-l-4 border-indigo-400">
                                <h4 class="font-bold text-indigo-800 mb-2">🔮 البرج الطالع</h4>
                                <div class="flex items-center space-x-3 space-x-reverse mb-2">
                                    <span class="text-3xl">${ascendantSymbol}</span>
                                    <span class="text-xl font-bold">${ascendant}</span>
                                </div>
                                <p class="text-sm text-indigo-700">كيف تظهر للعالم وانطباعك الأول على الآخرين</p>
                            </div>
                            
                            <div class="bg-gradient-to-r from-green-50 to-teal-50 p-4 rounded-lg border-l-4 border-green-400">
                                <h4 class="font-bold text-green-800 mb-2">🪐 مواقع الكواكب</h4>
                                <div class="space-y-1 text-sm text-green-700">
                                    <p><strong>القمر:</strong> ${planets.moon} - المشاعر والعواطف</p>
                                    <p><strong>عطارد:</strong> ${planets.mercury} - التفكير والتواصل</p>
                                    <p><strong>الزهرة:</strong> ${planets.venus} - الحب والجمال</p>
                                    <p><strong>المريخ:</strong> ${planets.mars} - الطاقة والدافع</p>
                                    <p><strong>المشتري:</strong> ${planets.jupiter} - الحظ والتوسع</p>
                                    <p><strong>زحل:</strong> ${planets.saturn} - الدروس والمسؤوليات</p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="space-y-4">
                            <div class="bg-gradient-to-r from-pink-50 to-rose-50 p-4 rounded-lg border-l-4 border-pink-400">
                                <h4 class="font-bold text-pink-800 mb-2">🤖 تحليل الذكاء الاصطناعي</h4>
                                <div class="space-y-2 text-sm text-pink-700">
                                    <p><strong>نقاط القوة:</strong> ${getStrengths(sunSign, ascendant)}</p>
                                    <p><strong>التحديات:</strong> ${getChallenges(sunSign, ascendant)}</p>
                                    <p><strong>المجال المهني المناسب:</strong> ${getCareerAdvice(sunSign, ascendant)}</p>
                                </div>
                            </div>
                            
                            <div class="bg-gradient-to-r from-purple-50 to-indigo-50 p-4 rounded-lg border-l-4 border-purple-400">
                                <h4 class="font-bold text-purple-800 mb-2">🏠 البيوت الفلكية الرئيسية</h4>
                                <div class="space-y-1 text-sm text-purple-700">
                                    <p><strong>البيت الأول (الشخصية):</strong> ${ascendant}</p>
                                    <p><strong>البيت السابع (العلاقات):</strong> ${ascendantSigns[(ascendantIndex + 6) % 12]}</p>
                                    <p><strong>البيت العاشر (المهنة):</strong> ${ascendantSigns[(ascendantIndex + 9) % 12]}</p>
                                    <p><strong>البيت الرابع (العائلة):</strong> ${ascendantSigns[(ascendantIndex + 3) % 12]}</p>
                                </div>
                            </div>
                            
                            <div class="bg-gradient-to-r from-orange-50 to-red-50 p-4 rounded-lg border-l-4 border-orange-400">
                                <h4 class="font-bold text-orange-800 mb-2">🔮 نصائح مستقبلية</h4>
                                <div class="space-y-1 text-sm text-orange-700">
                                    <p>• ${getFutureAdvice(sunSign, ascendant)}</p>
                                    <p>• ${getRelationshipAdvice(sunSign, planets.venus)}</p>
                                    <p>• ${getHealthAdvice(sunSign, planets.mars)}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mt-6 p-4 bg-gradient-to-r from-blue-50 to-indigo-50 rounded-lg border">
                        <p class="text-center text-sm text-blue-700">
                            🤖 <strong>تم إنشاء هذه القراءة بواسطة الذكاء الاصطناعي</strong><br>
                            استناداً إلى بياناتك الفلكية وخوارزميات التحليل المتقدمة
                        </p>
                    </div>
                    
                    <div class="mt-6 text-center">
                        <button onclick="closeAstrologyResult()" class="bg-indigo-600 text-white px-6 py-3 rounded-lg hover:bg-indigo-700 transition-colors">
                            ✅ إغلاق النتائج
                        </button>
                    </div>
                </div>
            `;
            
            document.body.appendChild(resultModal);
            
            // مسح النموذج
            document.getElementById('astrologyName').value = '';
            document.getElementById('birthDate').value = '';
            document.getElementById('birthHour').value = '';
            document.getElementById('birthMinute').value = '';
            document.getElementById('birthPlace').value = '';
            document.getElementById('astrologyPhone').value = '';
        }
        
        // Helper functions for AI analysis
        function getStrengths(sunSign, ascendant) {
            const strengths = {
                'الحمل': 'القيادة والشجاعة والمبادرة',
                'الثور': 'الصبر والثبات والعملية',
                'الجوزاء': 'الذكاء والتكيف والتواصل',
                'السرطان': 'الحدس والرعاية والإخلاص',
                'الأسد': 'الثقة والكرم والإبداع',
                'العذراء': 'التنظيم والدقة والتحليل',
                'الميزان': 'التوازن والعدالة والدبلوماسية',
                'العقرب': 'القوة والعمق والتحول',
                'القوس': 'التفاؤل والمغامرة والفلسفة',
                'الجدي': 'الطموح والانضباط والمسؤولية',
                'الدلو': 'الابتكار والاستقلالية والإنسانية',
                'الحوت': 'الحدس والرحمة والفن'
            };
            return strengths[sunSign] || 'قوة شخصية متميزة';
        }
        
        function getChallenges(sunSign, ascendant) {
            const challenges = {
                'الحمل': 'التسرع والعنف أحياناً',
                'الثور': 'العناد والبطء في التغيير',
                'الجوزاء': 'التشتت وعدم الثبات',
                'السرطان': 'الحساسية المفرطة والتقلبات',
                'الأسد': 'الغرور والحاجة للإعجاب',
                'العذراء': 'النقد المفرط والقلق',
                'الميزان': 'التردد وصعوبة اتخاذ القرار',
                'العقرب': 'الغيرة والميل للانتقام',
                'القوس': 'عدم الالتزام والمبالغة',
                'الجدي': 'التشاؤم والجمود أحياناً',
                'الدلو': 'البرود العاطفي والعناد',
                'الحوت': 'الهروب من الواقع والحساسية'
            };
            return challenges[sunSign] || 'تحديات شخصية للنمو';
        }
        
        function getCareerAdvice(sunSign, ascendant) {
            const careers = {
                'الحمل': 'القيادة والرياضة والأعمال',
                'الثور': 'المال والفن والزراعة',
                'الجوزاء': 'الإعلام والتعليم والتجارة',
                'السرطان': 'الرعاية والطبخ والعقارات',
                'الأسد': 'الفن والترفيه والإدارة',
                'العذراء': 'الصحة والتحليل والخدمات',
                'الميزان': 'القانون والفن والعلاقات',
                'العقرب': 'البحث والطب والتحقيق',
                'القوس': 'التعليم والسفر والفلسفة',
                'الجدي': 'الإدارة والهندسة والحكومة',
                'الدلو': 'التكنولوجيا والعلوم والإنسانية',
                'الحوت': 'الفن والطب والروحانيات'
            };
            return careers[sunSign] || 'مجالات متنوعة تناسب شخصيتك';
        }
        
        function getFutureAdvice(sunSign, ascendant) {
            const advice = [
                'ركز على تطوير نقاط قوتك الطبيعية',
                'تعلم من التحديات واستخدمها للنمو',
                'حافظ على التوازن بين العمل والحياة الشخصية',
                'استثمر في العلاقات الإيجابية',
                'كن صبوراً مع نفسك في رحلة التطور'
            ];
            return advice[Math.floor(Math.random() * advice.length)];
        }
        
        function getRelationshipAdvice(sunSign, venus) {
            return `في العلاقات، ركز على التواصل الصادق والتفهم المتبادل. برج الزهرة في ${venus} يشير إلى أهمية الجمال والانسجام في علاقاتك.`;
        }
        
        function getHealthAdvice(sunSign, mars) {
            return `للصحة، حافظ على النشاط البدني المنتظم. برج المريخ في ${mars} يشير إلى أهمية توجيه طاقتك بشكل إيجابي.`;
        }
        
        // Close astrology result modal
        function closeAstrologyResult() {
            const modal = document.querySelector('.fixed.inset-0.bg-black.bg-opacity-50');
            if (modal) {
                modal.remove();
            }
        }

        // Initialize UI on page load
        document.addEventListener('DOMContentLoaded', function() {
            updateSubscriptionUI();
        });
        
        // Close modals when clicking outside
        window.onclick = function(event) {
            const modals = ['books', 'zodiac', 'donation', 'horoscope', 'astrology', 'service'];
            modals.forEach(modal => {
                const modalElement = document.getElementById(modal + 'Modal');
                if (modalElement && event.target === modalElement) {
                    if (modal === 'service') {
                        closeServiceModal();
                    } else {
                        closeModal(modal);
                    }
                }
            });
        }
    </script>
