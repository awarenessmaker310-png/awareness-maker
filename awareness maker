        function closeServiceModal() {
            document.getElementById('serviceModal').classList.add('hidden');
            document.getElementById('serviceModal').classList.remove('flex');
        }

        // Subscription management
        let userSubscriptions = JSON.parse(localStorage.getItem('userSubscriptions') || '{}');
        
        function checkSubscription(service) {
            const subscription = userSubscriptions[service];
            if (!subscription) return false;
            
            const now = new Date().getTime();
            const expiryDate = new Date(subscription.expiryDate).getTime();
            
            if (now > expiryDate) {
                delete userSubscriptions[service];
                localStorage.setItem('userSubscriptions', JSON.stringify(userSubscriptions));
                return false;
            }
            return true;
        }
        
        function activateSubscription(service, duration = 30) {
            const expiryDate = new Date();
            expiryDate.setDate(expiryDate.getDate() + duration);
            
            userSubscriptions[service] = {
                activatedDate: new Date().toISOString(),
                expiryDate: expiryDate.toISOString()
            };
            
            localStorage.setItem('userSubscriptions', JSON.stringify(userSubscriptions));
            updateSubscriptionUI();
        }
        
        function updateSubscriptionUI() {
            // Update books access
            const booksBtn = document.getElementById('accessBooksBtn');
            if (booksBtn) {
                if (checkSubscription('books')) {
                    booksBtn.textContent = '๐ ุฏุฎูู ุฅูู ุงูููุชุจุฉ';
                    booksBtn.className = 'bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors cursor-pointer';
                    booksBtn.disabled = false;
                } else {
                    booksBtn.textContent = '๐ ูุชุทูุจ ุงุดุชุฑุงู ูุดุท';
                    booksBtn.className = 'bg-gray-400 text-white px-6 py-3 rounded-lg cursor-not-allowed';
                    booksBtn.disabled = true;
                }
            }
            
            // Update astrology access
            const astrologyBtn = document.getElementById('astrologyAccessBtn');
            if (astrologyBtn) {
                if (checkSubscription('astrology')) {
                    astrologyBtn.textContent = '๐ ุงุญุณุจ ุทุงูุนู ุจุงูุฐูุงุก ุงูุงุตุทูุงุนู';
                    astrologyBtn.className = 'bg-indigo-600 text-white px-8 py-4 rounded-lg hover:bg-indigo-700 transition-colors text-lg font-bold cursor-pointer';
                    astrologyBtn.disabled = false;
                } else {
                    astrologyBtn.textContent = '๐ ูุชุทูุจ ุงุดุชุฑุงู ูุดุท';
                    astrologyBtn.className = 'bg-gray-400 text-white px-8 py-4 rounded-lg cursor-not-allowed text-lg font-bold';
                    astrologyBtn.disabled = true;
                }
            }
        }

        // Content functions
        function accessBooks() {
            if (!checkSubscription('books')) {
                alert('โ๏ธ ูุชุทูุจ ุงุดุชุฑุงู ูุดุท ูู ุฎุฏูุฉ ุงููุชุจ ุงูุฅููุชุฑูููุฉ');
                return;
