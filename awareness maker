            const url = document.getElementById('booksLink').value;
            if (!url) {
                alert('โ๏ธ ูู ูุชู ุชุญุฏูุฏ ุฑุงุจุท ุงูููุชุจุฉ ุจุนุฏ');
                return;
            }
            window.open(url, '_blank', 'noopener,noreferrer');
        }

