        function closeActivationModal() {
            const modal = document.querySelector('.activation-modal');
            if (modal) {
                modal.remove();
            }
        }

        function submitActivationRequest(event, serviceId, serviceName, price) {
            event.preventDefault();
            const formData = new FormData(event.target);
            const fullName = formData.get('fullName');
            const phone = formData.get('phone');
            const email = formData.get('email');
            
            // ุฅูุดุงุก ุทูุจ ุงูุชูุนูู
            const activationRequest = {
                id: Date.now().toString(),
                service: serviceId,
                serviceName: serviceName,
                price: price,
                customerName: fullName,
                phone: phone,
                email: email,
                requestDate: new Date().toISOString(),
                status: 'pending'
            };
            
            // ุญูุธ ุทูุจ ุงูุชูุนูู ูุญููุงู
            let requests = JSON.parse(localStorage.getItem('activationRequests') || '[]');
            requests.push(activationRequest);
            localStorage.setItem('activationRequests', JSON.stringify(requests));
            
            // ุฅุบูุงู ุงููุงูุฐุฉ
            closeActivationModal();
            
            // ุฅุธูุงุฑ ุฑุณุงูุฉ ุชุฃููุฏ
            alert(`๐ค ุชู ุฅุฑุณุงู ุทูุจ ุงูุชูุนูู ุจูุฌุงุญ!\n\n๐ ุชูุงุตูู ุงูุทูุจ:\nโข ุงูุฎุฏูุฉ: ${serviceName}\nโข ุงูุงุณู: ${fullName}\nโข ุงููุงุชู: ${phone}\nโข ุงูุจุฑูุฏ ุงูุฅููุชุฑููู: ${email}\n\n๐ง ุชู ุฅุฑุณุงู ุงูุทูุจ ุฅูู: awarenessmaker310@gmail.com\n\nโณ ูู ุงูุชุธุงุฑ ููุงููุฉ ุงูุฅุฏุงุฑุฉ...\n\nุณูุชู ุงูุชูุงุตู ูุนู ุนุจุฑ ุงูุจุฑูุฏ ุงูุฅููุชุฑููู ุจูุฌุฑุฏ ุงูููุงููุฉ ุนูู ุทูุจู.`);
            
            // ูุญุงูุงุฉ ุงุณุชูุงู ุทูุจ ุงูุชูุนูู ูู ูุจู ุงูุฅุฏุงุฑุฉ
            setTimeout(() => {
                showAdminApprovalDialog(activationRequest);
            }, 2000);
        }

