        // Zodiac calculator using Arabic Gematria
        function calculateZodiac() {
            const fullName = document.getElementById('fullName').value.trim();
            const motherName = document.getElementById('motherName').value.trim();
            
            if (!fullName || !motherName) {
                alert('โ๏ธ ูุฑุฌู ุฅุฏุฎุงู ุงุณูู ุงููุงูู ูุงุณู ุงูุฃู');
                return;
            }

            // Arabic Gematria values (ุญุณุงุจ ุงูุฌูู ุงููุจูุฑ) - ุงูุฌุฏูู ุงูุตุญูุญ
            const arabicValues = {
                'ุง': 1, 'ุฃ': 1, 'ุฅ': 1, 'ุข': 1, 'ุก': 1,
                'ุจ': 2, 'ุฌ': 3, 'ุฏ': 4, 'ู': 5, 'ู': 6,
                'ุฒ': 7, 'ุญ': 8, 'ุท': 9, 'ู': 10, 'ู': 20, 'ู': 30,
                'ู': 40, 'ู': 50, 'ุณ': 60, 'ุน': 70, 'ู': 80, 'ุต': 90,
                'ู': 100, 'ุฑ': 200, 'ุด': 300, 'ุช': 400, 'ุซ': 500, 'ุฎ': 600,
                'ุฐ': 700, 'ุถ': 800, 'ุธ': 900, 'ุบ': 1000
            };

            // Calculate total value for full name
            let nameValue = 0;
            for (let char of fullName.replace(/\s/g, '')) {
                if (arabicValues[char]) {
                    nameValue += arabicValues[char];
                }
            }

            // Calculate total value for mother's name
            let motherValue = 0;
            for (let char of motherName.replace(/\s/g, '')) {
                if (arabicValues[char]) {
                    motherValue += arabicValues[char];
                }
            }

            // Total value of both names
            const totalValue = nameValue + motherValue;

            // Calculate zodiac index (remainder when divided by 12)
            // ุฅุฐุง ูุงู ุงูุจุงูู 0ุ ูุตุจุญ ุงูุจุฑุฌ ุฑูู 12 (ุงูุญูุช)
            let zodiacIndex = totalValue % 12;
            if (zodiacIndex === 0) zodiacIndex = 12;

            // Zodiac signs array (1-12) - ุงูุชุณูุณู ุงูุตุญูุญ ููุฃุจุฑุงุฌ
            const zodiacSigns = {
                1: { name: 'ุงูุญูู', symbol: 'โ', dates: 'ูุงุฑุณ 21 - ุฃุจุฑูู 19', traits: 'ุดุฌุงุนุ ููุงุฏูุ ูุชุญูุณุ ูุจุงุฏุฑ' },
                2: { name: 'ุงูุซูุฑ', symbol: 'โ', dates: 'ุฃุจุฑูู 20 - ูุงูู 20', traits: 'ุตุจูุฑุ ุนูููุ ููุซููุ ูุซุงุจุฑ' },
                3: { name: 'ุงูุฌูุฒุงุก', symbol: 'โ', dates: 'ูุงูู 21 - ููููู 20', traits: 'ุฐููุ ูุชูููุ ุงุฌุชูุงุนูุ ูุถููู' },
                4: { name: 'ุงูุณุฑุทุงู', symbol: 'โ', dates: 'ููููู 21 - ููููู 22', traits: 'ุญุณุงุณุ ุญูููุ ุญุฏุณูุ ุนุงุฆูู' },
                5: { name: 'ุงูุฃุณุฏ', symbol: 'โ', dates: 'ููููู 23 - ุฃุบุณุทุณ 22', traits: 'ูุงุซูุ ูุฑููุ ูุจุฏุนุ ููุงุฏู' },
                6: { name: 'ุงูุนุฐุฑุงุก', symbol: 'โ', dates: 'ุฃุบุณุทุณ 23 - ุณุจุชูุจุฑ 22', traits: 'ููุธูุ ุชุญููููุ ูููุฏุ ุฏููู' },
                7: { name: 'ุงูููุฒุงู', symbol: 'โ', dates: 'ุณุจุชูุจุฑ 23 - ุฃูุชูุจุฑ 22', traits: 'ูุชูุงุฒูุ ุฏุจูููุงุณูุ ุนุงุฏูุ ุงุฌุชูุงุนู' },
                8: { name: 'ุงูุนูุฑุจ', symbol: 'โ', dates: 'ุฃูุชูุจุฑ 23 - ููููุจุฑ 21', traits: 'ูููุ ุบุงูุถุ ุดุบููุ ุนููู' },
                9: { name: 'ุงูููุณ', symbol: 'โ', dates: 'ููููุจุฑ 22 - ุฏูุณูุจุฑ 21', traits: 'ูุบุงูุฑุ ูุชูุงุฆูุ ุญุฑุ ููุณูู' },
                10: { name: 'ุงูุฌุฏู', symbol: 'โ', dates: 'ุฏูุณูุจุฑ 22 - ููุงูุฑ 19', traits: 'ุทููุญุ ููุถุจุทุ ูุณุคููุ ุนููู' },
                11: { name: 'ุงูุฏูู', symbol: 'โ', dates: 'ููุงูุฑ 20 - ูุจุฑุงูุฑ 18', traits: 'ูุจุชูุฑุ ูุณุชููุ ุฅูุณุงููุ ูููุฑ' },
                12: { name: 'ุงูุญูุช', symbol: 'โ', dates: 'ูุจุฑุงูุฑ 19 - ูุงุฑุณ 20', traits: 'ุญุงููุ ุฑุญููุ ูููุ ุฑูุญุงูู' }
            };

            const zodiac = zodiacSigns[zodiacIndex];

            document.getElementById('zodiacResult').innerHTML = `
                <div class="zodiac-result">
                    <div class="text-4xl mb-3">${zodiac.symbol}</div>
                    <h3 class="text-2xl font-bold mb-2">ุจุฑุฌู: ${zodiac.name}</h3>
                    <p class="mb-2"><strong>ุงูุชูุงุฑูุฎ:</strong> ${zodiac.dates}</p>
                    <p class="mb-3"><strong>ุงูุตูุงุช:</strong> ${zodiac.traits}</p>
                    <div class="text-sm opacity-90 space-y-1">
                        <p>ูููุฉ ุงูุงุณู: ${nameValue}</p>
