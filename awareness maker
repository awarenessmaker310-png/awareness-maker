        // Reject activation
        function rejectActivation(requestId) {
            let requests = JSON.parse(localStorage.getItem('activationRequests') || '[]');
            const request = requests.find(r => r.id === requestId);
            
            if (request) {
                // ุชุญุฏูุซ ุญุงูุฉ ุงูุทูุจ
                request.status = 'rejected';
                request.rejectionDate = new Date().toISOString();
                localStorage.setItem('activationRequests', JSON.stringify(requests));
                
                // ุฅุบูุงู ูุงูุฐุฉ ุงูุฅุฏุงุฑุฉ
                document.querySelector('.fixed.inset-0.bg-black.bg-opacity-70').remove();
                
                // ุฅุธูุงุฑ ุฑุณุงูุฉ ุฑูุถ
                alert(`โ ุชู ุฑูุถ ุทูุจ ุงูุชูุนูู\n\n๐ค ุงููุณุชุฎุฏู: ${request.customerName}\n๐ง ุงูุจุฑูุฏ: ${request.email}\n๐ฏ ุงูุฎุฏูุฉ: ${request.serviceName}\n\n๐ง ุณูุชู ุฅุฑุณุงู ุฅุดุนุงุฑ ุงูุฑูุถ ุฅูู ุงููุณุชุฎุฏู.`);
                
                // ูุญุงูุงุฉ ุฅุฑุณุงู ุฅูููู ุฑูุถ ูููุณุชุฎุฏู
                setTimeout(() => {
                    alert(`๐ง ุชู ุฅุฑุณุงู ุฅูููู ุงูุฑูุถ!\n\nุฅูู: ${request.email}\n\nุงูุฑุณุงูุฉ:\n"ูุฑุญุจุงู ${request.customerName},\n\nูุฃุณู ูุฅุจูุงุบู ุฃูู ุชู ุฑูุถ ุทูุจ ุชูุนูู ุงุดุชุฑุงูู ูู ${request.serviceName}.\nูุฑุฌู ุงูุชูุงุตู ูุนูุง ูููุฒูุฏ ูู ุงูุชูุงุตูู.\n\nุดูุฑุงู ููุ\nูุฑูู ุตุงูุน ูุนู"`);
                }, 1000);
            }
        }

        // Contact form
        function sendMessage(event) {
            event.preventDefault();
            alert('๐ง ุชู ุฅุฑุณุงู ุฑุณุงูุชู ุจูุฌุงุญ! ุณูุชูุงุตู ูุนู ูุฑูุจุงู ุนูู ุงูุฑูู ุงููุฐููุฑ.');
            event.target.reset();
        }

        // Donation function
        function submitDonation(event) {
            event.preventDefault();
            const formData = new FormData(event.target);
            const donorName = formData.get('donorName') || event.target[0].value;
            const amount = formData.get('amount') || event.target[1].value;
            const country = formData.get('country') || event.target[2].value;
            const phone = formData.get('phone') || event.target[3].value;
            
            // ููุง ูููู ุฅุถุงูุฉ ุงูููุฏ ูุญูุธ ุงูุจูุงูุงุช ูู ูุงุนุฏุฉ ุจูุงูุงุช Excel
            alert(`โค๏ธ ุดูุฑุงู ูู ุนูู ุงูุชุจุฑุน!\n\nุงููุชุจุฑุน: ${donorName}\nุงููุจูุบ: ${amount} ุฏููุงุฑ\nุงูุฏููุฉ: ${country}\nุงููุงุชู: ${phone}\n\nุณูุชู ุงูุชูุงุตู ูุนู ูุชุฃููุฏ ุงูุชุจุฑุน.`);
            event.target.reset();
            closeModal('donation');
        }

