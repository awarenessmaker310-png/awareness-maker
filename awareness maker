        // Astrology reading access for subscribers
        function accessAstrologyReading() {
            if (!checkSubscription('astrology')) {
                alert('โ๏ธ ูุชุทูุจ ุงุดุชุฑุงู ูุดุท ูู ุฎุฏูุฉ ูุฑุงุกุฉ ุงูุทุงูุน ุงููููู');
                return;
            }
            
            const name = document.getElementById('astrologyName').value.trim();
            const birthDate = document.getElementById('birthDate').value;
            const birthHour = document.getElementById('birthHour').value;
            const birthMinute = document.getElementById('birthMinute').value;
            const birthPlace = document.getElementById('birthPlace').value.trim();
            const phone = document.getElementById('astrologyPhone').value.trim();
            
            if (!name || !birthDate || !birthPlace) {
                alert('โ๏ธ ูุฑุฌู ููุก ุงูุญููู ุงููุทููุจุฉ (ุงูุงุณูุ ุชุงุฑูุฎ ุงููููุงุฏุ ููุงู ุงูููุงุฏุฉ)');
                return;
            }
            
            // ุชูุณูู ููุช ุงูููุงุฏุฉ
            let birthTime = '';
            if (birthHour && birthMinute) {
                birthTime = `${birthHour}:${birthMinute}`;
            } else if (birthHour) {
                birthTime = `${birthHour}:00 (ุชูุฑูุจู)`;
            } else {
                birthTime = 'ุบูุฑ ูุญุฏุฏ';
            }
            
            // ุฅุบูุงู ุงููุงูุฐุฉ ุงูุญุงููุฉ
            closeModal('astrology');
            
            // ุนุฑุถ ูุงูุฐุฉ ูุฑุงุกุฉ ุงูุทุงูุน ุจุงูุฐูุงุก ุงูุงุตุทูุงุนู
            generateAstrologyReading(name, birthDate, birthTime, birthPlace, phone);
        }
        
        // Generate AI-powered astrology reading
        function generateAstrologyReading(name, birthDate, birthTime, birthPlace, phone) {
            // ูุญุงูุงุฉ ุงูุฐูุงุก ุงูุงุตุทูุงุนู ููุฑุงุกุฉ ุงูุทุงูุน
            const birthDateObj = new Date(birthDate);
            const month = birthDateObj.getMonth() + 1;
            const day = birthDateObj.getDate();
            
            // ุชุญุฏูุฏ ุงูุจุฑุฌ ุงูุดูุณู
            let sunSign = '';
            let sunSignSymbol = '';
            let sunSignTraits = '';
            
            if ((month == 3 && day >= 21) || (month == 4 && day <= 19)) {
                sunSign = 'ุงูุญูู'; sunSignSymbol = 'โ'; sunSignTraits = 'ุดุฌุงุนุ ููุงุฏูุ ูุชุญูุณุ ูุจุงุฏุฑ';
            } else if ((month == 4 && day >= 20) || (month == 5 && day <= 20)) {
                sunSign = 'ุงูุซูุฑ'; sunSignSymbol = 'โ'; sunSignTraits = 'ุตุจูุฑุ ุนูููุ ููุซููุ ูุซุงุจุฑ';
            } else if ((month == 5 && day >= 21) || (month == 6 && day <= 20)) {
                sunSign = 'ุงูุฌูุฒุงุก'; sunSignSymbol = 'โ'; sunSignTraits = 'ุฐููุ ูุชูููุ ุงุฌุชูุงุนูุ ูุถููู';
            } else if ((month == 6 && day >= 21) || (month == 7 && day <= 22)) {
                sunSign = 'ุงูุณุฑุทุงู'; sunSignSymbol = 'โ'; sunSignTraits = 'ุญุณุงุณุ ุญูููุ ุญุฏุณูุ ุนุงุฆูู';
            } else if ((month == 7 && day >= 23) || (month == 8 && day <= 22)) {
                sunSign = 'ุงูุฃุณุฏ'; sunSignSymbol = 'โ'; sunSignTraits = 'ูุงุซูุ ูุฑููุ ูุจุฏุนุ ููุงุฏู';
            } else if ((month == 8 && day >= 23) || (month == 9 && day <= 22)) {
                sunSign = 'ุงูุนุฐุฑุงุก'; sunSignSymbol = 'โ'; sunSignTraits = 'ููุธูุ ุชุญููููุ ูููุฏุ ุฏููู';
            } else if ((month == 9 && day >= 23) || (month == 10 && day <= 22)) {
                sunSign = 'ุงูููุฒุงู'; sunSignSymbol = 'โ'; sunSignTraits = 'ูุชูุงุฒูุ ุฏุจูููุงุณูุ ุนุงุฏูุ ุงุฌุชูุงุนู';
            } else if ((month == 10 && day >= 23) || (month == 11 && day <= 21)) {
                sunSign = 'ุงูุนูุฑุจ'; sunSignSymbol = 'โ'; sunSignTraits = 'ูููุ ุบุงูุถุ ุดุบููุ ุนููู';
            } else if ((month == 11 && day >= 22) || (month == 12 && day <= 21)) {
                sunSign = 'ุงูููุณ'; sunSignSymbol = 'โ'; sunSignTraits = 'ูุบุงูุฑุ ูุชูุงุฆูุ ุญุฑุ ููุณูู';
            } else if ((month == 12 && day >= 22) || (month == 1 && day <= 19)) {
                sunSign = 'ุงูุฌุฏู'; sunSignSymbol = 'โ'; sunSignTraits = 'ุทููุญุ ููุถุจุทุ ูุณุคููุ ุนููู';
            } else if ((month == 1 && day >= 20) || (month == 2 && day <= 18)) {
                sunSign = 'ุงูุฏูู'; sunSignSymbol = 'โ'; sunSignTraits = 'ูุจุชูุฑุ ูุณุชููุ ุฅูุณุงููุ ูููุฑ';
            } else {
                sunSign = 'ุงูุญูุช'; sunSignSymbol = 'โ'; sunSignTraits = 'ุญุงููุ ุฑุญููุ ูููุ ุฑูุญุงูู';
            }
            
            // ูุญุงูุงุฉ ุงูุจุฑุฌ ุงูุทุงูุน (ุนุดูุงุฆู ุจูุงุกู ุนูู ุงูููุช ูุงูููุงู)
            const ascendantSigns = ['ุงูุญูู', 'ุงูุซูุฑ', 'ุงูุฌูุฒุงุก', 'ุงูุณุฑุทุงู', 'ุงูุฃุณุฏ', 'ุงูุนุฐุฑุงุก', 'ุงูููุฒุงู', 'ุงูุนูุฑุจ', 'ุงูููุณ', 'ุงูุฌุฏู', 'ุงูุฏูู', 'ุงูุญูุช'];
            const ascendantSymbols = ['โ', 'โ', 'โ', 'โ', 'โ', 'โ', 'โ', 'โ', 'โ', 'โ', 'โ', 'โ'];
            const ascendantIndex = (birthDateObj.getTime() + (birthTime ? parseInt(birthTime.split(':')[0]) * 60 + parseInt(birthTime.split(':')[1] || 0) : 0)) % 12;
            const ascendant = ascendantSigns[ascendantIndex];
            const ascendantSymbol = ascendantSymbols[ascendantIndex];
            
