        // Approve activation
        function approveActivation(requestId) {
            let requests = JSON.parse(localStorage.getItem('activationRequests') || '[]');
            const request = requests.find(r => r.id === requestId);
            
            if (request) {
                // ุชุญุฏูุซ ุญุงูุฉ ุงูุทูุจ
                request.status = 'approved';
                request.approvalDate = new Date().toISOString();
                localStorage.setItem('activationRequests', JSON.stringify(requests));
                
                // ุชูุนูู ุงูุงุดุชุฑุงู
                activateSubscription(request.service);
                
                // ุฅุบูุงู ูุงูุฐุฉ ุงูุฅุฏุงุฑุฉ
                document.querySelector('.fixed.inset-0.bg-black.bg-opacity-70').remove();
                
                // ุฅุธูุงุฑ ุฑุณุงูุฉ ุชุฃููุฏ ููุฅุฏุงุฑุฉ
                alert(`โ ุชู ุชูุนูู ุงูุงุดุชุฑุงู ุจูุฌุงุญ!\n\n๐ค ุงููุณุชุฎุฏู: ${request.customerName}\n๐ง ุงูุจุฑูุฏ: ${request.email}\n๐ฏ ุงูุฎุฏูุฉ: ${request.serviceName}\n\n๐ง ุณูุชู ุฅุฑุณุงู ุฅุดุนุงุฑ ุชูุนูู ุฅูู ุงููุณุชุฎุฏู.`);
                
                // ูุญุงูุงุฉ ุฅุฑุณุงู ุฅูููู ุชูุนูู ูููุณุชุฎุฏู
                setTimeout(() => {
                    alert(`๐ง ุชู ุฅุฑุณุงู ุฅูููู ุงูุชูุนูู!\n\nุฅูู: ${request.email}\n\nุงูุฑุณุงูุฉ:\n"ูุฑุญุจุงู ${request.customerName},\n\nุชู ุชูุนูู ุงุดุชุฑุงูู ูู ${request.serviceName} ุจูุฌุงุญ!\nููููู ุงูุขู ุงููุตูู ุฅูู ุฌููุน ูุญุชููุงุช ุงูุฎุฏูุฉ.\n\nุดูุฑุงู ููุ\nูุฑูู ุตุงูุน ูุนู"`);
